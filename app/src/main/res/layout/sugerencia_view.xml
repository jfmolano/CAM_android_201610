<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/sugerenciaCell"
    android:paddingBottom="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgEdificio"
        android:maxHeight="90dp"
        android:layout_alignWithParentIfMissing="false"
        android:maxWidth="90dp"
        android:minHeight="90dp"
        android:minWidth="90dp"
        android:src="@drawable/ml"
        android:adjustViewBounds="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sugerencia:"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/imgEdificio"
        android:layout_toEndOf="@+id/imgEdificio"
        android:paddingTop="10dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ML"
        android:id="@+id/txtEdificio"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sonido: 50dBA - Medio"
        android:id="@+id/txtSonido"
        android:layout_below="@+id/txtEdificio"
        android:layout_alignStart="@+id/txtEdificio"
        android:paddingTop="5dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Luz: 100"
        android:id="@+id/txtLuz"
        android:layout_below="@+id/txtSonido"
        android:layout_alignStart="@+id/txtSonido"
        android:paddingTop="5dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Temperatura: 18Â°"
        android:id="@+id/txtTemperatura"
        android:layout_below="@+id/txtLuz"
        android:layout_alignStart="@+id/txtLuz"
        android:paddingTop="5dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Humedad: 28%"
        android:id="@+id/txtHumedad"
        android:layout_below="@+id/txtTemperatura"
        android:layout_alignStart="@+id/txtTemperatura"
        android:paddingTop="5dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="8:00"
        android:id="@+id/txtHora"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"
        android:paddingTop="10dp" />

</RelativeLayout>
